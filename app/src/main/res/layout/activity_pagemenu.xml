<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".PagemenuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/menu"
            android:textAlignment="center"
            android:textColor="@color/background"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.062"/>

        <Button
            android:id="@+id/gmbrpersegi"
            android:layout_width="112dp"
            android:layout_height="98dp"
            android:layout_margin="10dp"
            android:background="@drawable/persegi"
            android:text="Persegi"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/gmbrlingkaran"
            android:layout_width="112dp"
            android:layout_height="104dp"
            android:layout_margin="10dp"
            android:background="@drawable/lingkaran2"
            android:text="Lingkaran"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/gmbrpersegipanjang"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:shadowColor="@color/warnabackground"
            android:background="@drawable/persegipanjang"
            android:text="Persegi Panjang"
            android:textSize="15sp"
            android:textColor="#ffff"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/gmbrsegitiga"
            android:layout_width="155dp"
            android:layout_height="97dp"
            android:layout_margin="10dp"
            android:background="@drawable/segitigaaaaaaaaa"
            android:text="Segitiga"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <Button
            android:id="@+id/gmbrtrapesium"
            android:layout_width="155dp"
            android:layout_height="97dp"
            android:layout_margin="10dp"
            android:background="@drawable/trapesium"
            android:text="Trapesium"
            android:textColor="#ffff"
            android:textSize="20sp" />



    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>